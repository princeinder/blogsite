<%- include ('../partial/header') %>

        <!-- Sign up form -->
        <section class="signup main">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" action="/creative" class="register-form" enctype='multipart/form-data' id="register-form">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="Your Name" required/>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email" required/>
                            </div>
                            <div class="form-group">
                                <label for="phone"><i class="zmdi zmdi-phone"></i></label>
                                <input type="text" name="phone" id="phone" placeholder="Your Phone" required/>
                            </div>

                            <div class="form-group">
                                <label for="bio"><i class="zmdi zmdi-phone"></i></label>
                                <textarea class="form-control" name="bio" id="bio" placeholder="Your bio" rows="3"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="city"><i class="zmdi zmdi-phone"></i></label>
                                <input type="text" name="city" id="city" placeholder="Your city" required/>
                            </div>

                            <div class="form-group">
                                <label for="state"><i class="zmdi zmdi-phone"></i></label>
                                <input type="text" name="state" id="state" placeholder="Your state" required/>
                            </div>
                            <div class="form-group">
                                <label for="facebook"><i class="zmdi zmdi-phone"></i></label>
                                <input type="text" name="facebook" id="facebook" placeholder="Facebook page link" required/>
                            </div>
                            <div class="form-group">
                                <label for="twitter"><i class="zmdi zmdi-phone"></i></label>
                                <input type="text" name="twitter" id="twitter" placeholder="Twitter page link" required/>
                            </div>
                            <div class="form-group">
                                <label for="pimage"><i class="zmdi zmdi-image"></i></label>
                                <input  type="file" name="pimage" id="pimage" placeholder="Profile picture" required/>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="pass" placeholder="Password" required/>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="re_password" id="re_pass" placeholder="Repeat your password" required/>
                            </div>
                            <a href="/login" class="signup-image-link">I am already member</a>
                         
                         
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                            </div>
                            <% if (message.length > 0) { %>
                                <div class="alert alert-danger"><%= message %></div>
                            <% } %>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="frontend/images/signup-image.jpg" alt="sing up image"></figure>
                        
                    </div>
                </div>
            </div>
        </section>

<%- include ('../partial/footer') %>