          <div class="main-content-container container-fluid px-4">
            <!-- Page Header -->
            <div class="page-header row no-gutters py-4">
              <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <h3 class="page-title">Update Membership</h3>
              </div>
            </div>
            <!-- End Page Header -->
            <!-- Default Light Table -->
            <div class="row">
         
              <div class="col-lg-8">
                <div class="card card-small mb-4">
                  <div class="card-header border-bottom">
                    <h6 class="m-0">Membership Details</h6>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                      <div class="row">
                        <div class="col">
                          <form name="addpricing" method="post" action="/dashboard/updatemembership">
                            <div class="form-row">
                              <div class="form-group col-md-6">
                                <input type="hidden"  name="id" placeholder="Name" value="<%= membership.id %>" > 
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%= membership.name %>" required> </div>
                            </div>
                            <div class="form-row">
                              <div class="form-group col-md-6">
                                <textarea class="form-control" name="description" placeholder="Add description here" id="exampleFormControlTextarea1" rows="5" value="<%= membership.description %>" required><%= membership.description %></textarea> </div>

                            </div>
                            <div class="form-row">
                              <div class="input-group mb-3 col-md-6">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">$</span>
                                </div>

                                <input type="number" name="billing_amount" class="form-control" placeholder="Billing Amount" aria-label="Amount (to the nearest dollar)" value="<%= membership.billing_amount %>" required >
                                <input type="number" name="billing_amount_multiple" width="50" class="form-control"    value="<%= membership.billing_amount_multiple %>" required >
                      
    
                                  <div class="input-group-append">
                                    <select id="billing_suffix" name="billing_amount_suffix"value="<%= membership.billing_suffix %>" class="form-control">
                                  <option value="month">Month(s)</option>
                                  <option value="year">Year(s)</option>
                                </select>
                              </div>
                                <!-- <div class="input-group-append">
                                  <span class="input-group-text">.00</span>
                                </div> -->
                              </div>
                            <div class="form-group">
                    
                          
                            <button type="submit" class="btn btn-accent">Update</button>
                          </form>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <!-- End Default Light Table -->
          </div>

