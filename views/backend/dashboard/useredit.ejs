          <div class="main-content-container container-fluid px-4">
            <!-- Page Header -->
            <div class="page-header row no-gutters py-4">
              <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <h3 class="page-title">Update User</h3>
              </div>
            </div>
            <!-- End Page Header -->
            <!-- Default Light Table -->
            <div class="row">
         
              <div class="col-lg-8">
                <div class="card card-small mb-4">
                  <div class="card-header border-bottom">
                    <h6 class="m-0">User Details</h6>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item p-3">
                      <div class="row">
                        <div class="col">
                          <form name="addpricing" method="post" enctype='multipart/form-data' action="/dashboard/updateuser">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <input type="hidden"  name="id" placeholder="Name" value="<%= data.id %>" > 
                                    <label for="pimage">Avatar</label>
                                    <img style="max-width: 2.5rem;" class="user-avatar rounded-circle mr-2" src="/backend/images/avatars/<%- data.pimage %>" alt="User Avatar">
                                    <input type="file" class="form-control" id="name" name="pimage" placeholder="Choose Avatar " value="<%= data.name %>" > </div>
                                 </div>
                                 <div class="form-row">
                              <div class="form-group col-md-6">
                                <label for="email">Name</label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="<%= data.name %>" required> </div>
                             </div>
                             <div class="form-row">
                             <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="<%= data.email %>" required> </div>
                             </div>
  
                             <% if(data.state) { %>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                   <label for="state">State</label>
                                   <input type="text" class="form-control" id="state" name="state" placeholder="State" value="<%= data.state %>" required> </div>
                                </div>
                                <% } %>
                                <% if(data.city) { %>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                       <label for="city">City</label>
                                       <input type="text" class="form-control" id="city" name="city" placeholder="City" value="<%= data.city %>" required> </div>
                                    </div>
                                    <% } %>
                                   
                                    <% if(data.bio) { %>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                           <label for="bio">Bio</label>
                                           <textarea  class="form-control" id="bio" name="bio" placeholder="State" value="<%= data.bio %>" required><%= data.bio %> </textarea></div>
                                        </div>
                                        <% }%>
                                        <% if(data.phone) { %>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                               <label for="phone">Phone</label>
                                               <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone" value="<%= data.phone %>" required> </div>
                                            </div>
                                            <% }%>
                               </div>
                              </div>
                            <div class="form-group">
                           <button type="submit" class="btn btn-accent">Update</button>
                          </form>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <!-- End Default Light Table -->
          </div>

          <%- include ('../partial/footer') %>